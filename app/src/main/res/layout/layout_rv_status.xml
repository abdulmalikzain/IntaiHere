<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_rv_statusfoto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/man"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/tv_rv_usernamestatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_rv_statuswaktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="waktu"
                    android:textSize="6pt"/>
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/tv_rv_StatusStatus"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/tv_rv_statustujuan"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/tv_rv_fotostatus"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/tv_rv_fotosuser"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>